# ğŸ³ StockFlow Frontend - Development Dockerfile
# Optimized for React + Vite + TypeScript development with hot-reload

FROM node:20-alpine as development

# ğŸ”§ Install system dependencies for development
RUN apk add --no-cache \
    curl \
    dumb-init \
    && rm -rf /var/cache/apk/*

# ğŸ“ Set working directory
WORKDIR /app

# ğŸ‘¥ Create non-root user for security
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodeuser -u 1001 -G nodejs

# ğŸ“¦ Copy package files first (Docker layer caching optimization)
COPY --chown=nodeuser:nodejs package*.json ./

# ğŸš€ Install ALL dependencies (including devDependencies for development)
RUN npm ci --include=dev && \
    npm cache clean --force

# ğŸ“ Copy source code (this layer changes frequently, so it's last)
COPY --chown=nodeuser:nodejs . .

# ğŸ”§ Fix permissions for Vite temporary files
RUN chown -R nodeuser:nodejs /app && \
    chmod -R 755 /app

# ğŸ”’ Switch to non-root user
USER nodeuser

# ğŸŒ Expose Vite development server port
EXPOSE 3000

# ğŸš€ Health check for Docker Compose
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:3000 || exit 1

# ğŸ¯ Configure Vite for Docker environment
ENV CHOKIDAR_USEPOLLING=true
ENV CHOKIDAR_INTERVAL=1000

# ğŸš€ Start Vite development server with hot reload
# Using dumb-init to handle signals properly
ENTRYPOINT ["dumb-init", "--"]
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]